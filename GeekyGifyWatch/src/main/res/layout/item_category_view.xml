<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainViewItem"
    android:layout_width="match_parent"
    android:layout_height="77dp">

    <TextView
        android:id="@+id/categoryIconLeft"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginEnd="1dp"
        android:gravity="center_vertical|end"
        android:paddingEnd="13dp"
        android:paddingStart="7dp"
        android:textColor="@color/light"
        android:textSize="17sp"
        android:background="@drawable/category_left_background"
        apps:layout_constraintWidth_percent="0.5"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/categoryIconRight"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginStart="1dp"
        android:gravity="center_vertical|start"
        android:paddingEnd="7dp"
        android:paddingStart="13dp"
        android:textColor="@color/light"
        android:textSize="17sp"
        android:background="@drawable/category_right_background"
        apps:layout_constraintWidth_percent="0.5"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
