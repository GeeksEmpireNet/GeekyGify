<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color_game_light">

    <item
        android:id="@+id/drawableBackground">
        <shape
            android:shape="rectangle" >
            <corners
                android:topLeftRadius="1dp"
                android:bottomLeftRadius="1dp"
                android:bottomRightRadius="77dp"
                android:topRightRadius="77dp"/>
        </shape>
    </item>
    <item
        android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <corners
                android:topLeftRadius="1dp"
                android:bottomLeftRadius="1dp"
                android:bottomRightRadius="77dp"
                android:topRightRadius="77dp"/>
            <solid
                android:color="@color/default_color_game_light"/>
        </shape>
    </item>
</ripple>