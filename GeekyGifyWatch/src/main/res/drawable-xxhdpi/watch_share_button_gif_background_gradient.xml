<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color_light">

    <item
        android:id="@+id/drawableBackground">
        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="113dp"
                android:bottomLeftRadius="113dp"/>
            <gradient
                android:startColor="@color/default_color_game_transparent"
                android:centerColor="@color/dark_transparent"
                android:endColor="@color/default_color_game_transparent"
                android:angle="90"/>
        </shape>
    </item>
    <item
        android:id="@android:id/mask">
        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="113dp"
                android:bottomLeftRadius="113dp"/>
            <solid
                android:color="@color/default_color_light"/>
        </shape>
    </item>
</ripple>