<resources>

    <style name="GeeksEmpire" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/default_color_game</item>
        <item name="android:colorPrimaryDark">@color/default_color_game_dark</item>
        <item name="android:colorAccent">@color/default_color_game_light</item>

        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="GeeksEmpire.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary">@color/default_color_game</item>
        <item name="android:colorPrimaryDark">@color/default_color_game_dark</item>
        <item name="android:colorAccent">@color/default_color_game_light</item>

        <item name="colorPrimary">@color/default_color_game</item>
        <item name="colorPrimaryDark">@color/default_color_game_dark</item>
        <item name="colorAccent">@color/default_color_game_light</item>

        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ShareWaitingTheme" parent="@style/GeeksEmpire.Material">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/default_color_game_light</item>

        <item name="android:statusBarColor">@color/default_color_game_light</item>
        <item name="android:navigationBarColor">@color/default_color_game_light</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/pink</item>
    </style>
</resources>
