<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <color
            android:color="@color/darker"/>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:type="linear"
                android:startColor="@color/default_color_game_light"
                android:centerColor="@color/black"
                android:endColor="@color/default_color_game_light"
                android:centerY="50%"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:type="linear"
                android:startColor="@android:color/transparent"
                android:centerColor="@color/black"
                android:endColor="@android:color/transparent"
                android:centerY="40%"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:type="linear"
                android:startColor="@android:color/transparent"
                android:centerColor="@color/black"
                android:endColor="@android:color/transparent"
                android:centerY="60%"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>